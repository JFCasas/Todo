<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>

  </title>
  <%- include('partials/head.ejs')%>
</head>

<body class="grey lighten-3">

  <%- include('partials/navigation.ejs', {user: user})%>

    <div class="container">

      <h3>Nuevo usuario</h3>

    </div>

    <div class="container">

      <div class="row " >
        <form action="/user" method="POST" class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input name="email" id="email" type="text" class="validate">
              <label for="email">email</label>
            </div>
            <div class="input-field col s6">
              <input name="name" id="name" type="text" class="validate">
              <label for="name">name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input name="password" id="password" type="text" class="validate">
              <label for="password">password</label>
            </div>
          </div>
          <input type="submit" class="btn pull-left boton black" value="Enviar">
        </form>
      </div>

    </div>

    <div class="container">

      <h3>Lista de usuarios</h3>

    </div>

    <div class="container">
      
      <div class="row ">
        <% for(var i = 0; i < users.length; i++) {%>
        <div class="col s4 ">
          <div class="card black">
            <div class="card-content white-text">
              <span class="card-title"><%= users[i].email %></span>
              <p><%= users[i].name %></p>
            </div>
            <div class="card-action">                         
              <a class="grey-text text-lighten-5" href="/user/delete/<%= users[i]._id %>" >Eliminar</a>
              
            </div>
          </div>
        </div>
        <% } %>
      </div>
      
    </div>

   
    <%- include('partials/footer.ejs')%>


</body>

</html>