<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>

  </title>
  <%- include('partials/head.ejs')%>
</head>

<body class="grey lighten-3">

  <%- include('partials/navigation.ejs', {user: user})%>

    <div class="container">

      <h3>Nueva tarea</h3>

    </div>

    <div class="container">

      <div class="row " >
        <form action="/todo" method="POST" class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input name="title" id="title" type="text" class="validate">
              <label for="title">Title</label>
            </div>
            <div class="input-field col s6">
              <input name="description" id="description" type="text" class="validate">
              <label for="description">Description</label>
            </div>
          </div>
          <input type="submit" class="btn pull-left boton black" value="Enviar">
        </form>
      </div>

    </div>

    <div class="container">

      <h3>Lista de tareas</h3>

    </div>

    <div class="container">
      
      <div class="row ">
        <% for(var i = 0; i < tareas.length; i++) {%>
        <div class="col s12 ">
          <div class="card black">
            <div class="card-content white-text">
              <span class="card-title"><%= tareas[i].title %></span>
              <p><%= tareas[i].description %></p>
            </div>
            <div class="card-action">
              <!-- <a class="grey-text text-lighten-5" href="/edit/<%= tareas[i]._id %>">Editar</a> -->
              <a class="grey-text text-lighten-5" href="/todo/edit/<%= tareas[i]._id %>">Editar</a>
              <a class="grey-text text-lighten-5" href="/todo/delete/<%= tareas[i]._id %>" >Eliminar</a>
              
            </div>
          </div>
        </div>
        <% } %>
      </div>
      
    </div>

   
    <%- include('partials/footer.ejs')%>


</body>

</html>